{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "lib": ["dom", "es2017"],
    "outDir": "dist",
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src",
    "example"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "module": "commonjs",
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ]
}